<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="Border.header">
        <Setter Property="Height" Value="80"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
    </Style>
    
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightAltChromeWhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>
    
    <Style Selector="Border.footer">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
    </Style>
    
    <Style Selector="TextBlock.copyright">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightAltChromeWhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Border.body">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"/>
    </Style>
</Styles>